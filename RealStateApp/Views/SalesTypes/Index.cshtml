@using RealStateApp.Core.Application.ViewModels.SalesTypes
@model List<SalesTypesVM>

<div class="row align-content-center">
    <div class="col-10 offset-1">

        <div class="card">
            <div class="card-header bg-primary text-light">
               Tipos de Ventas
                <div class="text-end">
                    <a class="btn btn-success float-end text-black" style="background-color: #f6eaff; color: white;" asp-controller="SalesTypes" asp-action="AddSalesTypes">Nuevo Tipo de Ventas</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Count > 0 || Model != null)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Description</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td><a class="btn btn-outline-success" asp-action="EditSalesTypes" asp-route-id="@item.Id">Editar</a></td>
                                    <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h2 class="bg-danger text-center text-black"><b>No Hay Estado de Casos</b></h2>
                }
            </div>
        </div>
        <script src="https://kit.fontawesome.com/47ea8ef61d.js" crossorigin="anonymous"></script>
    </div>
</div>
