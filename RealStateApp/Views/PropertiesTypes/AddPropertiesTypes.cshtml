@using RealStateApp.Core.Application.ViewModels.PropertiesTypes
@model SavePropertiesTypesVM;

@{
    bool editMode = ViewBag.EditMode;
}


<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="card col-4" style="border-color : black;">
                <div class="card header form-group text-center" style="background-color : lightblue;">
                    <h1 class="text-dark">
                        @(editMode ? "Editar Estado de Caso" : "Añadir Estado de Caso")
                    </h1>
                </div>
                <div class="mt-3">

                    <form method="post" asp-controller="PropertiesTypes" asp-action="@(editMode ? "EditPropertiesTypes" : "AddPropertiesTypes" )" enctype="multipart/form-data">

                        <div class="form-group text-center mb-2">
                            <label asp-for="Name" class="form-label">Nombre</label>
                            <input asp-for="Name" class="form-control" placeholder="ingrese el Nombre">
                        </div>
                        <div class="form-group text-center mb-2">
                            <label asp-for="Description" class="form-label">Nombre</label>
                            <input asp-for="Description" class="form-control" placeholder="ingrese la Descripción">
                        </div>
                        <div class="form-group text-center mb-2">
                            <input asp-for="Id" class="form-control" hidden>
                        </div>
                        <div class="form-group mt-4 mb-4 text-center">
                            <button type="submit" class="btn btn-primary btn-outline-dark">@(editMode ? "Editar Estado de Caso" : "Registrar Estado de Caso")</button>
                            <a asp-controller="CaseStatus" asp-action="index" class="btn btn-danger">volver atras</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/x+965dzo0rt7abk41jstqiaqvgrvzpbzo5smxkp4yfrvh+8abtte1pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-uo2et0cphqdsjq6hjty5kvphtphzwj9wo1clhtmga3jdzwrnqq4sf86dihndz0w1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-jjsmvgyd0p3pxb1rribzuayoiiy6orq6vrjieaff/njgzixfdsf4x0xim+b07jrm" crossorigin="anonymous"></script>
</body> 