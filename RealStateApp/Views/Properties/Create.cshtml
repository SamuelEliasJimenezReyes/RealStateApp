<script>
    $(document).ready(function () {
        // Manejar cambios en el select multiple
        $(".select2").on("change", function () {
            // Limpiar el contenedor de artículos antes de agregar nuevos
            $("#articulosContainer").empty();

            // Iterar sobre los elementos seleccionados y agregar dinámicamente los controles
            $(this).find("option:selected").each(function () {
                var articuloId = $(this).val();
                var articuloNombre = $(this).text();

                // Agregar el control dinámico al contenedor
                $("#articulosContainer").append(`
                                <div class="form-group">
                                    <label class="control-label">${articuloNombre}</label>
                                    <input type="number" class="form-control" name="articulosCantidades[${articuloId}]" placeholder="Cantidad">
                                    <input type="hidden" name="articuloId" value="${articuloId}">
                                </div>
                            `);
            });
        });
    });

        function previewImages(event) {
            var container = document.getElementById('imageContainer');
            container.innerHTML = '';

            var files = event.target.files;
            var count = Math.min(files.length, 4); // Limitar a 4 imágenes

            for (var i = 0; i < count; i++) {
                var file = files[i];

                // Crear una etiqueta de imagen para mostrar la vista previa
                var img = document.createElement('img');
                img.src = URL.createObjectURL(file);
                img.classList.add('selectedImage');

                container.appendChild(img);
            }
        }
</script>
 


