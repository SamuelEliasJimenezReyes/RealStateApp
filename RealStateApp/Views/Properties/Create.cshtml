                            <span asp-validation-for="LandSizeMeter" class="text-white"></span>
                            <span class="text-danger">La medida es en Metros</span>
                        </div>
                        <div class="form-group mx-sm-4 pt-3 mb-2">
                            <input asp-for="RoomQuantity" class="form-control" placeholder="Ingrese la Cantidad de Habitaciones de la Propiedad">
                            <span asp-validation-for="RoomQuantity" class="text-white"></span>
                        </div>
