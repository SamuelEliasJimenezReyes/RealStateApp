                            <input asp-for="BathroomQuantity" class="form-control" placeholder="Ingrese la Cantidad de Baños de la Propiedad" />
                            <span asp-validation-for="BathroomQuantity" class="text-white"></span>
                        </div>
                        <div class="form-group mx-sm-4 pt-3 mb-2">
                            <input asp-for="BathroomQuantity" class="form-control" placeholder="Ingrese la Cantidad de Baños de la Propiedad" />
                            <span asp-validation-for="BathroomQuantity" class="text-white"></span>
                        </div>
